<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_1"
    android:gravity="center"
    tools:context=".signUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edited_background"
            android:elevation="30dp"
            app:cardCornerRadius="20dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/signuptext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign-Up"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signup_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_edited_background"
                    android:drawableLeft="@drawable/baseline_person_add_alt_1_24"
                    android:drawablePadding="16dp"
                    android:hint="UserName"
                    android:padding="16dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/signup_Email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_edited_background"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="16dp"
                    android:hint="Input Email"
                    android:padding="16dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/signup_Phonenumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_edited_background"
                    android:drawableLeft="@drawable/baseline_local_phone_24"
                    android:drawablePadding="16dp"
                    android:hint="Phone Number"
                    android:padding="16dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/signup_Password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_edited_background"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="16dp"
                    android:hint="Password"
                    android:padding="16dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/signup_Confirm_Password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_edited_background"
                    android:drawableLeft="@drawable/baseline_preview_24"
                    android:drawablePadding="16dp"
                    android:hint="Confirm_Password"
                    android:padding="16dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/signup_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/custom_edited_background"
                    android:drawableStart="@drawable/twotone_person_pin_24"
                    android:drawableEnd="@drawable/twotone_arrow_drop_down_circle_24"
                    android:drawablePadding="16dp"
                    android:hint="Choose Gender"
                    android:padding="16dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/signUp_Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/description_background"
                    android:hint="Enter your desription......."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signUp_skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/description_background"
                    android:hint="Describe your Skill.........."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Upload Image"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/signUp_image"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/baseline_add_a_photo_24" />

                <Button
                    android:id="@+id/signup_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/lavender"
                    android:text="Register"
                    android:textSize="18sp"
                    app:cornerRadius="20dp" />

                <TextView
                    android:id="@+id/login_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:text="Already a user ?: Login"
                    android:textAlignment="center"
                    android:textColor="@color/lavender"
                    android:textSize="18sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>